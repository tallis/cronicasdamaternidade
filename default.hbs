</head>

<body class="{{body_class}}">
    <!--## Plugins-->
    <!--Facebook-->
    <div id="fb-root"></div>


    <div id="site-wrapper" class="c-site-wrapper">
        <div id="site-viewport" class="c-site-viewport">
            {{>"sidebar"}}

            <div id="site-content" class="c-site-content">
                {{> "mobile-header"}} {{{body}}}
